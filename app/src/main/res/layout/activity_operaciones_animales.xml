<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/AzulSecundario"
    android:paddingBottom="10dp"
    tools:context=".ActivityOperacionesAnimales">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:background="@drawable/custome_edittext"
                app:cardCornerRadius="30dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/TextVTituloOperacionesAnimales"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/baloo"
                        android:gravity="center"
                        android:text="Animales"
                        android:textColor="@color/black"
                        android:textSize="60sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                            android:id="@+id/SpinnerAnimalesBuscar"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginStart="32dp"
                            android:layout_marginLeft="32dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/custome_edittext"
                            android:gravity="center"
                            android:padding="10dp"
                            android:spinnerMode="dialog"/>

                        <Button
                            android:id="@+id/BtBuscarAnimalOperacionesAnimales"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginEnd="40dp"
                            android:layout_marginRight="40dp"
                            android:layout_weight="0"
                            android:text="Buscar"
                            android:textSize="16sp"
                            app:backgroundTint="#4cb8b9"
                            app:cornerRadius="15dp"
                            app:icon="?android:attr/actionModeWebSearchDrawable"
                            app:iconGravity="end"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|start|center_horizontal"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/EditTCodigoAnimalOperacionesAnimales"
                            android:layout_width="wrap_content"
                            android:layout_height="55dp"
                            android:layout_marginStart="32dp"
                            android:layout_marginLeft="32dp"
                            android:layout_weight="1"
                            android:background="@drawable/custome_edittext"
                            android:ems="10"
                            android:hint="CÃ³digo del animal"
                            android:inputType="text"
                            android:padding="10dp"
                            android:textSize="15sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/TxCpOp" />

                        <Button
                            android:id="@+id/BtLimpiarCamposOperacionesAnimales"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginEnd="32dp"
                            android:layout_marginRight="32dp"
                            android:layout_weight="0"
                            android:textSize="15sp"
                            app:backgroundTint="#4cb8b9"
                            app:cornerRadius="15dp"
                            app:icon="@android:drawable/ic_delete"
                            app:iconGravity="textTop"
                            app:iconSize="40sp"
                            app:iconTint="@color/white"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center|center_vertical|center_horizontal"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ImgVFotografiaOperacionesAnimales"
                            android:layout_width="150dp"
                            android:layout_marginStart="32dp"
                            android:layout_height="150dp"
                            android:layout_weight="1"
                            tools:srcCompat="@tools:sample/backgrounds/scenic" />

                        <Button
                            android:id="@+id/BtSeleccionarImagenOperacionesAnimales"
                            android:layout_width="wrap_content"
                            android:layout_height="70dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="32dp"
                            android:layout_gravity="center"
                            android:layout_weight="0"
                            android:text="Elegir \n imagen"
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            app:backgroundTint="@color/AzulPrincipal"
                            app:cornerRadius="15dp"
                            app:layout_constraintEnd_toEndOf="parent"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center|start|center_horizontal"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/EditTNombreOperacionesAnimales"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginStart="32dp"
                            android:layout_marginLeft="32dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginEnd="32dp"
                            android:layout_marginRight="32dp"
                            android:background="@drawable/custome_edittext"
                            android:ems="10"
                            android:hint="Nombre"
                            android:inputType="text"
                            android:padding="10dp"
                            android:textSize="15sp"
                            app:layout_constraintEnd_toEndOf="parent"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center|start|center_horizontal"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/SpEspecieOperacionesAnimales"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginStart="32dp"
                            android:layout_marginLeft="32dp"
                            android:layout_marginEnd="32dp"
                            android:layout_marginRight="32dp"
                            android:background="@drawable/custome_edittext"
                            android:gravity="center"
                            android:padding="10dp"
                            android:spinnerMode="dialog" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center|start|center_horizontal"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center|start|center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/TextVRazaOperacionesAnimales"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="32dp"
                                android:layout_marginRight="32dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/acme"
                                android:gravity="center"
                                android:paddingLeft="35dp"
                                android:text="Raza"
                                android:textColor="@color/AzulPrincipal"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:gravity="center|start|center_horizontal"
                                android:orientation="horizontal">

                                <Spinner
                                    android:id="@+id/SpRazaCaninaOperacionesAnimales"
                                    android:layout_width="match_parent"
                                    android:layout_height="55dp"
                                    android:layout_marginStart="32dp"
                                    android:layout_marginLeft="32dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/custome_edittext"
                                    android:gravity="center"
                                    android:padding="10dp"
                                    android:spinnerMode="dialog" />

                                <Spinner
                                    android:id="@+id/SpRazaMininaOperacionesAnimales"
                                    android:layout_width="match_parent"
                                    android:layout_height="55dp"
                                    android:layout_marginEnd="32dp"
                                    android:layout_marginRight="32dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/custome_edittext"
                                    android:gravity="center"
                                    android:padding="10dp"
                                    android:spinnerMode="dialog" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center|start|center_horizontal"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/EditTTamaÃ±oOperacionesAnimales"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginStart="32dp"
                            android:layout_marginLeft="32dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginEnd="32dp"
                            android:layout_marginRight="32dp"
                            android:background="@drawable/custome_edittext"
                            android:ems="10"
                            android:hint="TamaÃ±o"
                            android:inputType="text"
                            android:padding="10dp"
                            android:textSize="15sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/TxCpOp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center|start|center_horizontal"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/SpCondicionOperacionesAnimales"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginStart="32dp"
                            android:layout_marginLeft="32dp"
                            android:layout_marginEnd="32dp"
                            android:layout_marginRight="32dp"
                            android:layout_weight="1"
                            android:addStatesFromChildren="false"
                            android:animateLayoutChanges="false"
                            android:background="@drawable/custome_edittext"
                            android:gravity="center"
                            android:padding="10dp"
                            android:spinnerMode="dialog" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center|start|center_horizontal"
                        android:orientation="horizontal">


                        <Spinner
                            android:id="@+id/SpSexoOperacionesAnimales"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginStart="32dp"
                            android:layout_marginLeft="32dp"
                            android:layout_marginEnd="32dp"
                            android:layout_marginRight="32dp"
                            android:layout_weight="1"
                            android:addStatesFromChildren="false"
                            android:animateLayoutChanges="false"
                            android:background="@drawable/custome_edittext"
                            android:gravity="center"
                            android:padding="10dp"
                            android:spinnerMode="dialog" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center|start|center_horizontal"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/EditTEdadOperacionesAnimales"
                            android:layout_width="wrap_content"
                            android:layout_height="55dp"
                            android:layout_marginStart="32dp"
                            android:layout_marginLeft="32dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginEnd="0dp"
                            android:layout_marginRight="0dp"
                            android:background="@drawable/custome_edittext"
                            android:ems="10"
                            android:hint="Edad"
                            android:inputType="number"
                            android:padding="10dp"
                            android:textSize="15sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/TxFechaOp" />

                        <TextView
                            android:id="@+id/TextVAÃ±osOperacionesAnimales"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="32dp"
                            android:layout_marginRight="32dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/acme"
                            android:gravity="center"
                            android:text="AÃ±os"
                            android:textColor="@color/AzulPrincipal"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center|start|center_horizontal"
                        android:orientation="horizontal">

                        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                            android:id="@+id/SpInstitucionOperacionesAnimales"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginStart="32dp"
                            android:layout_marginLeft="32dp"
                            android:layout_marginEnd="32dp"
                            android:layout_marginRight="32dp"
                            android:background="@drawable/custome_edittext"
                            android:padding="10dp"
                            android:layout_weight="1"
                            android:spinnerMode="dialog" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/BtInsertarOperacionesAnimales"
                                    android:layout_width="wrap_content"
                                    android:layout_height="60dp"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_weight="1"
                                    android:text="Registrar"
                                    android:textSize="13sp"
                                    app:backgroundTint="#4cb8b9"
                                    app:cornerRadius="15dp"
                                    app:layout_constraintStart_toEndOf="@+id/BtInsertarUsuario"
                                    app:layout_constraintTop_toBottomOf="@+id/TxNivAdmiOp" />

                                <Button
                                    android:id="@+id/BtModificarOperacionesAnimales"
                                    android:layout_width="wrap_content"
                                    android:layout_height="60dp"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_weight="1"
                                    android:text="Modificar"
                                    android:textSize="13sp"
                                    app:backgroundTint="#4cb8b9"
                                    app:cornerRadius="15dp"
                                    app:layout_constraintStart_toEndOf="@+id/BtInsertarUsuario"
                                    app:layout_constraintTop_toBottomOf="@+id/TxNivAdmiOp" />

                                <Button
                                    android:id="@+id/BtEliminarOperacionesAnimales"
                                    android:layout_width="wrap_content"
                                    android:layout_height="60dp"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginEnd="5dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_weight="1"
                                    android:text="Eliminar"
                                    android:textSize="13sp"
                                    app:backgroundTint="#4cb8b9"
                                    app:cornerRadius="15dp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/BtModificarOperacionesAnimales"
                                    app:layout_constraintTop_toBottomOf="@+id/TxNivAdmiOp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>
    
</androidx.constraintlayout.widget.ConstraintLayout>